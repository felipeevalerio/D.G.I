{% extends "layout.njk" %}

{% block page %} 
<h1>Tópico {% if topic.status %}Fechado{% else %}Aberto{% endif %}</h1>
{% endblock page%}

{% block content %}
<div class="container container-project">
    <div class="project-image-info">
        <div class="image">
            <img src="{% if topic.id != 3 %}{{comments[topic.id - 1].image}}{% else %}https://www.mercantec.com.br/wp-content/uploads/2019/06/Padr%C3%A3o-img_.jpg{% endif %}" alt="Imagem de {{comments[0].author}}">
        </div>
        <div class="info">
            <p>por <strong>{{comments[topic.id - 1].author}}</strong></p>
            <p>{{comments[topic.id - 1].date}}</p>
        </div>
    </div>
    <div class="project-description-download">
        <h3>{{topic.title}}</h3>
        <div class="description">
            <p>{{topic.description or "Projeto Sem Descrição"}}</p>
        </div>

    </div>
    <section class="comments-section">
        <div class="recently">
            <h2>Comentários Recentes</h2>
            {% for comment in comments %}
            <div class="comment-card">
                <div class="comment-header">
                    <p>Autor: {{comment.author}}</p>
                    <p>{{comment.date}}</p>
                </div>
                <p>{{comment.message or "Sensacional!"}}</p>
            </div>
            {% endfor %}
        </div>
        
    </section>
    <div class="new">
        <h4>Novo comentário</h4>
        <textarea name="comment" placeholder="Digite aqui o que achou do projeto." class="texto"></textarea>
        <button type="button">Enviar</button>
    </div>
</div>



{% endblock content %}