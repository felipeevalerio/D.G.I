{% extends "layout.njk" %}

{% block page %} 
<h1>Cadastrar-se</h1>
{% endblock page%}

{% block content %}
<div class="container container-register">
    <form action="/register" method="post">
        <div class="header">
            <h2>Cadastrar</h2>
            <button type="submit" class="button">Enviar</button>
        </div>
        <div class="inputs">
            <div class="name input">
                <label for="name">Nome de usuário</label>
                <input type="text" name="name" id="name" placeholder="Digite seu nome de usuário" value="{{name}}">
            </div>
            <div class="email input">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" placeholder="Digite seu email" value="{{email}}"> 
            </div>
            <div class="password input">
                <label for="password">Senha</label>
                <input type="password" name="password" id="password" placeholder="Digite sua senha"> 
            </div>
            <div class="repeat-password input">
                <label for="repeat-password">Confirmar Senha</label>
                <input type="password" name="repeatPassword" id="repeatPassword" placeholder="Confirme a senha"> 
            </div>
            <div class="avatar input">
                <label for="about">Avatar URL</label>
                <input type="url" name="avatar" id="avatar" placeholder="http://">
            </div>
        </div>
    
    </form>
</div>

{% endblock content %}